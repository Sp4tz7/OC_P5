<form action="/post/comment/add/{{ post.getId() }}/" method="post" class="{{ display }}" id="comment_{{ parentCommentId }}">
    <div class="form-group">
        <textarea rows="{{ rows }}" name="message" placeholder="Write comment here ..." required
                  class="form-control c-square"></textarea>
    </div>
    <div class="form-group">
        <input type="hidden" value="{{ csrf_token }}" name="csrf_token">
        <input type="hidden" name="redirect" value="{{ url }}">
        <input type="hidden" name="id" value="{{ post.getId() }}">
        <input type="hidden" name="parent_id" value="{{ parentCommentId }}">
        <button type="submit" class="btn btn-info">SUBMIT</button>
    </div>
</form>