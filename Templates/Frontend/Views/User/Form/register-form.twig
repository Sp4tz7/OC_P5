<form class="register-form d-none" action="/register/" method="post">
    <h3 class="font-green">Sign Up</h3>
    {% if flash %}
        <div class="alert alert-{{ flash.type }}">
            <button class="close" data-close="alert"></button>
            <span>{{ flash.message['content'] }}</span>
        </div>
    {% endif %}
    <p class="hint"> Enter your personal details below: </p>
    <div class="form-group">
        <label class="control-label d-none">Firstname</label>
        <input class="form-control placeholder-no-fix" type="text" placeholder="Firstname" name="firstname"
               value="{{ form.firstname }}" required>
    </div>
    <div class="form-group">
        <label class="control-label d-none">Lastname</label>
        <input class="form-control placeholder-no-fix" type="text" placeholder="Lastname" name="lastname"
               value="{{ form.lastname }}" required>
    </div>
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label d-none">Email</label>
        <input class="form-control placeholder-no-fix" type="text" placeholder="Email" name="email"
               value="{{ form.email }}" required></div>
    <p class="hint"> Enter your account details below: </p>
    <div class="form-group">
        <label class="control-label d-none">Username</label>
        <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username"
               name="username" value="{{ form.username }}" required></div>
    <div class="form-group">
        <label class="control-label d-none">Password</label>
        <input class="form-control placeholder-no-fix" type="password" autocomplete="off"
               id="register_password" required
               placeholder="Password" name="password" value="{{ form.password }}"></div>
    <div class="form-group">
        <label class="control-label d-none">Re-type Your Password</label>
        <input class="form-control placeholder-no-fix" type="password" autocomplete="off"
               placeholder="Re-type Your Password" name="rpassword" required></div>
    <div class="form-actions">
        <input type="hidden" name="register_user">
        <input type="hidden" name="redirect" value="{{ url|default('/register/') }}">
        <button type="button" id="register-back-btn" class="btn green btn-outline mr-3">Back</button>
        <button type="submit" id="register-submit-btn" class="btn btn-success uppercase pull-right">Submit
        </button>
    </div>
</form>
