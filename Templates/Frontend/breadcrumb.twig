<nav aria-label="breadcrumb">
    <span class="breadcrumb breadcrumb-title float-left">
        {% if post.getTitle() %}{{ post.getTitle() }}{% endif %}
    </span>
    <ol class="breadcrumb float-right">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        {% if category and post.getTitle() %}
            <li class="breadcrumb-item"><a href="/post/{{ category.category_slug }}/">{{ category.category_name }}</a></li>
            {% else %}
                <li class="breadcrumb-item active" aria-current="page">{{ category.category_name }}</li>
        {% endif %}
        {% if post.getTitle() %}
            <li class="breadcrumb-item active" aria-current="page">{{ post.getTitle() }}</li>
        {% endif %}
    </ol>
</nav>